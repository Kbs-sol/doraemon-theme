# Doraemon Movies Website - Environment Variables Configuration

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
# Get these from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Optional: Telegram webhook URL for receiving updates
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook

# =============================================================================
# AI CONTENT GENERATION
# =============================================================================
# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2500

# Google Custom Search for movie information (optional)
SEARCH_ENGINE_ID=your_google_search_engine_id
SEARCH_API_KEY=your_google_search_api_key

# =============================================================================
# MONETIZATION & ADSENSE
# =============================================================================
# Google AdSense Configuration
ADSENSE_PUBLISHER_ID=ca-pub-XXXXXXXXXXXXXXXX
ADSENSE_AUTO_ADS=true

# Ad Unlock Timer Configuration (in seconds)
AD_UNLOCK_TIMER=30
AD_REFRESH_INTERVAL=30000
MAX_AD_REFRESH=5

# Revenue Optimization
ENABLE_AD_BLOCKER_DETECTION=true
ENABLE_AB_TESTING=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Cloudflare D1 Database
D1_DATABASE_ID=your_d1_database_id_here
D1_DATABASE_NAME=doraemon-production

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret for admin authentication
JWT_SECRET=your_very_secure_jwt_secret_here_change_this_in_production

# Admin Credentials (change these!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=doraemon123

# Video Security
VIDEO_TOKEN_EXPIRY=3600
MAX_VIDEO_FILE_SIZE=2147483648
ENABLE_IP_VALIDATION=true

# =============================================================================
# SEO & SOCIAL MEDIA
# =============================================================================
# Site Configuration
SITE_TITLE=Doraemon Movies & Episodes - Watch Free Online
SITE_DESCRIPTION=Watch your favorite Doraemon movies and episodes for free. Daily updated content with latest releases and classic adventures.
SITE_URL=https://your-domain.com
SITE_LOGO_URL=https://your-domain.com/static/images/doraemon-logo.png

# Social Media
FACEBOOK_APP_ID=your_facebook_app_id
TWITTER_USERNAME=@yourtwitterhandle
YOUTUBE_CHANNEL_ID=your_youtube_channel_id

# =============================================================================
# CLOUDFLARE SPECIFIC
# =============================================================================
# Cloudflare Pages Configuration
CF_PROJECT_NAME=doraemon-movies
CF_COMPATIBILITY_DATE=2024-01-01

# Analytics & Performance
ENABLE_CF_ANALYTICS=true
ENABLE_CF_WEB_VITALS=true

# =============================================================================
# CRON & AUTOMATION
# =============================================================================
# Content Generation Automation
ENABLE_AUTO_CONTENT_GENERATION=true
AUTO_GENERATION_SCHEDULE=0 9 * * *
AUTO_GENERATION_LIMIT=5

# Sitemap & SEO Updates
SITEMAP_UPDATE_FREQUENCY=daily
ENABLE_AUTO_SEO_UPDATES=true

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Environment
NODE_ENV=production

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_LOGGING=false

# Feature Flags
ENABLE_TELEGRAM_INTEGRATION=true
ENABLE_AI_GENERATION=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_PREMIUM_FEATURES=false

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
# Database Backup
ENABLE_AUTO_BACKUP=true
BACKUP_SCHEDULE=0 2 * * 0
BACKUP_RETENTION_DAYS=30

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Site under maintenance. Please check back later.

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X
GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
NOTIFICATION_EMAIL=admin@your-domain.com

# =============================================================================
# CONTENT DELIVERY & STORAGE
# =============================================================================
# Image Optimization
ENABLE_IMAGE_OPTIMIZATION=true
IMAGE_QUALITY=85
MAX_IMAGE_SIZE=1920

# CDN Configuration
CDN_BASE_URL=https://your-cdn.com
ENABLE_CDN_ASSETS=true

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
# API Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=3600

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CORS=true
CORS_ORIGIN=*

# =============================================================================
# MOBILE & PWA
# =============================================================================
# Progressive Web App
ENABLE_PWA=false
PWA_NAME=Doraemon Movies
PWA_SHORT_NAME=Doraemon
PWA_THEME_COLOR=#0099FF

# =============================================================================
# COMMENTS & COMMUNITY (Future Features)
# =============================================================================
# Disqus Integration (optional)
DISQUS_SHORTNAME=your_disqus_shortname

# User Registration (if enabled)
ENABLE_USER_REGISTRATION=false
REQUIRE_EMAIL_VERIFICATION=true

# =============================================================================
# NOTES FOR DEPLOYMENT
# =============================================================================
# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env to version control
# 3. Use Cloudflare Pages environment variables for production
# 4. Test all integrations in development before deploying
# 5. Monitor logs and analytics after deployment
#
# For Cloudflare Pages deployment:
# - Add these as environment variables in your Pages project settings
# - Use wrangler secrets for sensitive values like API keys
# - Ensure D1 database is properly bound in wrangler.jsonc
#
# Security Best Practices:
# - Use strong, unique passwords and secrets
# - Enable 2FA on all third-party services
# - Regularly rotate API keys and tokens
# - Monitor access logs and set up alerts
# - Keep all dependencies updated